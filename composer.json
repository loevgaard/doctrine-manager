{
    "name": "loevgaard/doctrine-manager",
    "type": "library",
    "description": "A manager class for Doctrine",
    "keywords": [
        "doctrine",
        "manager",
        "doctrine-manager"
    ],
    "homepage": "https://github.com/loevgaard/doctrine-manager",
    "license": "MIT",
    "authors": [
        {
            "name": "Joachim Loevgaard",
            "email": "joachim@loevgaard.dk",
            "homepage": "https://github.com/loevgaard"
        }
    ],
    "require": {
        "php" : "~7.1",
        "doctrine/common": "^2.6"
    },
    "require-dev": {
        "phpunit/phpunit" : "~5.5||~6.0",
        "friendsofphp/php-cs-fixer": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "Loevgaard\\DoctrineManager\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Loevgaard\\DoctrineManager\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "./vendor/bin/php-cs-fixer fix --verbose --dry-run",
        "fix-style": "./vendor/bin/php-cs-fixer fix --verbose"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
